{
  "name": "deus-template",
  "private": true,
  "scripts": {
    "notios": "notios dev",
    "dev": "run-p dev:*",
    "dev:client": "npm run dev --prefix client",
    "dev:server": "npm run dev --prefix server",
    "generate": "run-p generate:*",
    "generate:client": "npm run generate --prefix client",
    "generate:server": "npm run generate --prefix server",
    "lint": "run-p lint:js lint:prettier lint:style",
    "lint:js": "eslint --ext .ts,.tsx,.js --ignore-path .gitignore .",
    "lint:prettier": "prettier --check \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore",
    "lint:style": "stylelint \"client/**/*.css\" --ignore-path .gitignore",
    "lint:prisma": "npm run lint:prisma --prefix server",
    "lint:fix:client": "npm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore && npm run lint:style -- --fix",
    "lint:fix:server": "npm run lint:prisma && npm run lint:js -- --fix && prettier --write \"./**/*.{ts,tsx,js}\" --ignore-path .gitignore",
    "lint:fix": "npm run lint:prisma && npm run lint:fix:client",
    "test": "run-p test:*",
    "test:client": "npm run test --prefix client",
    "test:server": "npm run test --prefix server",
    "typecheck": "run-p typecheck:*",
    "typecheck:client": "npm run typecheck --prefix client",
    "typecheck:server": "npm run typecheck --prefix server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-next": "^13.4.13",
    "eslint-config-prettier": "^8.5.0",
    "notios": "^0.4.1",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.3",
    "react": "^18.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
